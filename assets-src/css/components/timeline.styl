.timeline
    left 50%
    right 10px
    bottom 10px
    height 36px
    overflow hidden
    position absolute
    background rgba(0,0,0,.5)
    z-index 2

    &__slider
        position absolute
        top 9px
        left 120px
        right 60px

    &__toggle-playback
        color #FFF
        position absolute
        display block
        left 10px
        top 9px

        &:hover
            opacity .8

    &__speed
        position absolute
        left 35px
        color #AAA
        top 10px
        display block
        font-size 14px
        font-weight 700

        &.x10
            left 57px
        &.x30
            left 88px
        &--active
            color #FFF
        &:hover
            color #EEE

    &__share
    &__fullscreen
        color #FFF
        position absolute
        display block
        right 37px
        top 9px

        &:hover
            opacity .8

    &__fullscreen
        right 10px

    +below(650px)
        left 10px

    .fa
        font-size 19px

.timeline--loading:after
    content 'Loading playback...'
    position absolute
    left 130px
    top 10px
    color #FFF
    font-size 14px
    font-weight 500

.timeline--caching:after
    content 'Caching playback just this once (sit tight)...'

.timeline__slider .progress
    position absolute
    left 0
    right 0
    z-index 1
    transform translateZ(0)

.timeline__slider .noUi-base
    z-index 2

&.noUi-horizontal .noUi-handle
    padding 8px 0 0 9px
    font-size 12px
    font-weight 500

    &.left-time
        text-indent -58px
        color #000

.noUi-horizontal .noUi-handle
    transform translateZ(0)
    box-shadow none
    border none
    background none
    border-radius 0
    width 8px
    left -4px
    color #FFF

    &:hover
        cursor col-resize

    &:before
        display none

    &:after
        width 2px
        background #FFF
        height 22px
        top 4px
        left 3px

.noUi-origin
.noUi-target
    transform translateZ(0)
    border none
    border-radius 0px
    background #030303
    box-shadow none !important

.noUi-connect
    background #FFF
