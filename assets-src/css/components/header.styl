header
    background $navBackgroundColor
    padding 0 $sidePadding
    line-height 21px

    h1 a
        color #FFF
        font-weight bold
        font-size 20px
        float left
        display block
        line-height 50px

        .fa
            margin-right 10px

.header__right
    float right
    text-align right

.header__right__item
    display inline-block
    margin-left 30px
    color #FFF
    font-weight 500
    line-height 50px

.header__right__item:hover
    opacity 0.7

.header__right__item .fa
    margin-right 5px
