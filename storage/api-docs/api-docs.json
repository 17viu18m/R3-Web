{
    "swagger": "2.0",
    "info": {
        "title": "R3 API",
        "contact": {
            "email": "alexcrooks@gmail.com"
        },
        "version": "1.0.0"
    },
    "basePath": "/api",
    "schemes": [
        "http",
        "https"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/events": {
            "get": {
                "tags": [
                    "Events"
                ],
                "summary": "Finds all events for a mission",
                "description": "Returns all missions events",
                "responses": {
                    "200": {
                        "description": "A list of all events for a single mission"
                    }
                }
            }
        },
        "/infantry": {
            "get": {
                "tags": [
                    "Infantry"
                ],
                "summary": "Finds all infantry entities for a mission",
                "description": "Returns all infantry entities",
                "responses": {
                    "200": {
                        "description": "A list of all infantry entities for a single mission"
                    }
                }
            }
        },
        "/missions": {
            "get": {
                "tags": [
                    "Missions"
                ],
                "summary": "Finds all visible missions",
                "description": "Returns all missions that aren't hidden",
                "responses": {
                    "200": {
                        "description": "A list of all visible missions"
                    }
                }
            }
        },
        "/missions/all": {
            "get": {
                "tags": [
                    "Missions"
                ],
                "summary": "Finds all missions hidden or otherwise",
                "description": "Returns all missions, needs web token admin auth",
                "responses": {
                    "200": {
                        "description": "A list of all missions"
                    }
                }
            }
        },
        "/missions/{missionId}": {
            "get": {
                "tags": [
                    "Missions"
                ],
                "summary": "Find mission by Id",
                "description": "Find mission by Id that isn't hidden",
                "parameters": [
                    {
                        "name": "missionId",
                        "in": "path",
                        "description": "Id of mission to return",
                        "required": true,
                        "type": "integer",
                        "format": "int64",
                        "default": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A single mission"
                    },
                    "404": {
                        "description": "Mission not found"
                    }
                }
            }
        },
        "/positions/[type]": {
            "get": {
                "tags": [
                    "positions"
                ],
                "summary": "Finds all positions for a particular type for a single mission",
                "description": "Returns all mission positions",
                "responses": {
                    "200": {
                        "description": "A list of all type positions for a single mission"
                    }
                }
            }
        },
        "/shares": {
            "get": {
                "tags": [
                    "Shares"
                ],
                "summary": "Finds all mission shares",
                "description": "Returns all shares created during mission playback",
                "responses": {
                    "200": {
                        "description": "A list of all shares"
                    }
                }
            },
            "post": {
                "tags": [
                    "Shares"
                ],
                "summary": "Add a new share",
                "description": "Add a new share",
                "parameters": [
                    {
                        "name": "mission",
                        "in": "formData",
                        "description": "Mission Id",
                        "required": true,
                        "type": "integer",
                        "default": 1
                    },
                    {
                        "name": "url",
                        "in": "formData",
                        "description": "Url to share",
                        "required": true,
                        "type": "string",
                        "default": "https://example.com/1/test",
                        "minLength": 10
                    },
                    {
                        "name": "description",
                        "in": "formData",
                        "description": "Share description",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A single share"
                    },
                    "404": {
                        "description": "Share not found"
                    }
                }
            }
        },
        "/shares/{shareId}": {
            "get": {
                "tags": [
                    "Shares"
                ],
                "summary": "Find share by Id",
                "description": "Find share by Id and increment hits by 1",
                "parameters": [
                    {
                        "name": "shareId",
                        "in": "path",
                        "description": "Id of share to return",
                        "required": true,
                        "type": "integer",
                        "format": "int64",
                        "default": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A single share"
                    },
                    "404": {
                        "description": "Share not found"
                    }
                }
            }
        },
        "/stats/summary": {
            "get": {
                "tags": [
                    "Stats"
                ],
                "summary": "Returns summary stats",
                "responses": {
                    "200": {
                        "description": "A list of all summary stats"
                    }
                }
            }
        },
        "/stats/terrains": {
            "get": {
                "tags": [
                    "Stats"
                ],
                "summary": "Returns stats for terrains played on",
                "responses": {
                    "200": {
                        "description": "A list of all terrain stats"
                    }
                }
            }
        },
        "/stats/attendance": {
            "get": {
                "tags": [
                    "Stats"
                ],
                "summary": "Returns stats for attendance",
                "responses": {
                    "200": {
                        "description": "A list of all players, their mission played count and when they were last seen"
                    }
                }
            }
        },
        "/stats/player/{playerId}": {
            "get": {
                "tags": [
                    "Stats"
                ],
                "summary": "Find player stats by by Id",
                "parameters": [
                    {
                        "name": "playerId",
                        "in": "path",
                        "description": "Id of player to return",
                        "required": true,
                        "type": "integer",
                        "format": "int64",
                        "default": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Stats for a single player"
                    },
                    "404": {
                        "description": "Playeer not found"
                    }
                }
            }
        },
        "/vehicles": {
            "get": {
                "tags": [
                    "Vehicles"
                ],
                "summary": "Finds all vehicle entities for a mission",
                "description": "Returns all vehicle entities",
                "responses": {
                    "200": {
                        "description": "A list of all vehicle entities for a single mission"
                    }
                }
            }
        }
    },
    "definitions": {}
}